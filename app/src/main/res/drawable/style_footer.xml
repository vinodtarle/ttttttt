<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/colorYD" android:startColor="@color/colorYD" />
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="@color/colorYD" android:endColor="@color/colorYD" android:startColor="@color/colorYD" />
            <corners android:bottomLeftRadius="15dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
</selector>